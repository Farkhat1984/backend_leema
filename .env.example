# Application
APP_NAME=Fashion AI Platform
APP_VERSION=1.0.0
DEBUG=false
API_V1_PREFIX=/api/v1

# Database (PostgreSQL for production)
# ⚠️ CRITICAL: Use strong random passwords - never use default values!
# Generate: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
DATABASE_URL=postgresql+asyncpg://user:CHANGE_THIS_PASSWORD@postgres:5432/dbname
POSTGRES_USER=fashionuser
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=fashion_platform

# Security
# ⚠️ CRITICAL: Generate a strong random key (min 64 characters)
# Generate: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE-THIS-TO-RANDOM-64-PLUS-CHARACTERS-USE-GENERATOR-ABOVE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret
GOOGLE_REDIRECT_URI=https://www.leema.kz/public/auth/callback.html

# Firebase (for mobile apps)
# Get Firebase Web API Key from Firebase Console > Project Settings > General
FIREBASE_WEB_API=your-firebase-web-api-key
# Get these from Firebase Console > Project Settings > General (under "Your apps")
GOOGLE_MOBILE_CLIENT_ID=your-web-client-id.apps.googleusercontent.com
GOOGLE_MOBILE_CLIENT_SECRET=GOCSPX-your-mobile-client-secret
GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com

# Google Gemini AI
# Get API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash-image

# PayPal
# For production use 'live', for testing use 'sandbox'
# Get credentials from https://developer.paypal.com/
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=https://api.leema.kz/api/v1/payments/paypal/webhook

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Fashion AI Platform

# Frontend
FRONTEND_URL=https://www.leema.kz

# Backend API URLs (for mobile clients and WebSocket)
# These URLs should NOT include port numbers (handled by reverse proxy)
API_BASE_URL=https://api.leema.kz
WEBSOCKET_URL=wss://api.leema.kz

# File uploads
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["jpg","jpeg","png","webp"]

# Platform settings defaults
DEFAULT_USER_GENERATION_PRICE=1.0
DEFAULT_USER_TRY_ON_PRICE=0.5
DEFAULT_USER_FREE_GENERATIONS=3
DEFAULT_USER_FREE_TRY_ONS=5
DEFAULT_SHOP_PRODUCT_RENT_PRICE=10.0
DEFAULT_SHOP_MIN_RENT_MONTHS=1
DEFAULT_SHOP_COMMISSION_RATE=10.0
DEFAULT_REFUND_PERIOD_DAYS=14

# CORS - Allowed origins for API requests
CORS_ORIGINS=["https://www.leema.kz","https://leema.kz","https://api.leema.kz"]

# Rate limiting
RATE_LIMIT_PER_MINUTE=60/minute

# Redis (for caching, token blacklist, session storage)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0
